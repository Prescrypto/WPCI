{
  "name": "WPCI API",
  "description": "Withepaper continuous integration",
  "scripts": {
    "postdeploy": "bin/postcompile"
  },
  "env": {
    "GITHUB_TOKEN": {
      "required": true
    },
    "SMTP_ADDRESS": {
      "required": true
    },
    "SECRET": {
      "required": true
    },
    "SMTP_EMAIL": {
        "required": true
      },
    "SMTP_PASS": {
        "required": true
      },
    "SMTP_USER": {
        "required": true
      },
    "SMTP_PORT": {
        "required": true
      },
    "CONSUMER_KEY": {
        "required": true
      },
    "CONSUMER_SECRET": {
        "required": true
      },
    "ADMIN_USER": {
        "required": true
      },
    "ADMIN_PASS": {
        "required": true
      },
    "GITHUB_OAUTH_URI": {
        "required": true
      }
    },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "mongolab",
    "papertrail"
  ],
  "buildpacks": [
    {
      "url": "heroku/python",
      "url": "https://github.com/Thermondo/heroku-buildpack-tex"
    }
  ]
}
